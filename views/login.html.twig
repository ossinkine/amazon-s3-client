{% extends 'layout.html.twig' %}

{% block content %}
    <form class="form-signin" action="{{ path('login_check') }}" method="post">
        {% if error %}
            <div class="alert alert-danger" role="alert">{{ error }}</div>
        {% endif %}
        <h2 class="form-signin-heading">Enter your credentials</h2>
        <label for="input-username" class="sr-only">Access Key ID</label>
        <input type="text" name="_username" id="input-username" class="form-control" placeholder="Access Key ID" value="{{ last_username }}" autocomplete="off" required autofocus>
        <label for="inputPassword" class="sr-only">Secret Access Key</label>
        <input type="password" name="_password" id="input-password" class="form-control" placeholder="Secret Access Key" required>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
    </form>
{% endblock %}
